<?xml version="1.0" encoding="utf-8" ?>
<Shell  xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="MotorCalc.Views.CilindradaView"
        xmlns:behavior="clr-namespace:MotorCalc.Behaviors"
        xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
        xmlns:ffTransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
        FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False"
        Visual="Material">
    <ContentPage
        Visual="Material"
        Shell.NavBarIsVisible="False">
        <ContentPage.Content>
            <Frame CornerRadius="10" Margin="20,20,20,20" BackgroundColor="#CC708090" >
                <StackLayout VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
                    <Label Text="CALCULO Cc"
                               FontSize="30"
                               x:Name="lbl1"
                               FontAttributes="Bold"
                               TextColor="NavajoWhite"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="CenterAndExpand" />
                    <!--StringFormat='{0:#,0.0}'-->
                    <Label x:Name="lblResultadoCc"
                               FontSize="90"
                               TextColor="White"
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="CenterAndExpand" >

                        <Label.Behaviors>
                            <behavior:DoubleBehavior Text="{Binding ResultadoCc, Mode=TwoWay}"/>
                        </Label.Behaviors>
                    </Label>
                        <Entry x:Name="entryDiametro" TextColor="NavajoWhite" PlaceholderColor="White" HorizontalTextAlignment="Center" FontAttributes="Bold" Keyboard="Numeric" Placeholder="Diametro do pistão" FontSize="Title" Text="{Binding Diametro}"/>
                        <Entry x:Name="entryCurso" TextColor="NavajoWhite" PlaceholderColor="White" HorizontalTextAlignment="Center" FontAttributes="Bold" Keyboard="Numeric" Placeholder="Curso" FontSize="Title" Text="{Binding Curso}"/>
                        <Button Text="Calcular" BackgroundColor="GhostWhite" TextColor="Gray" BorderColor="Black" BorderWidth="2" CornerRadius="10" Margin="20,20,20,20" Command="{Binding CilindradaCalc}" />
                    </StackLayout>
                <!--</Grid>-->
            </Frame>
        </ContentPage.Content>
    </ContentPage>
</Shell>