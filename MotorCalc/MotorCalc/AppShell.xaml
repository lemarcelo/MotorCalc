<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MotorCalc.Views"
       Title="MotorCalc"
       x:Class="MotorCalc.AppShell"
       Shell.NavBarIsVisible="False"
       BackgroundColor="#081F30"
       ForegroundColor="White"
       TitleColor="White"
       DisabledColor="#B4FFFFFF"
       UnselectedColor="#95FFFFFF"
       Visual="Material"
       BackgroundImageSource="sem_limites.jpg">


    <MenuItem Text="Logout" StyleClass="MenuItemLayoutStyle"  />

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Cilindrada" Route="ItemsPage" ContentTemplate="{DataTemplate local:CilindradaView}" />
        <ShellContent Title="Compressao" Route="AboutPage" ContentTemplate="{DataTemplate local:CompressaoView}" />
    </FlyoutItem>

</Shell>
